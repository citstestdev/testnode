<%- include('../../common/sidebar_common') %>
<div class="layout-page">
  <%- include('../../common/header_new') %>

  <div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4">
          <% if(msg) { %> <div  class="alert alert-success" id="alertmsg" ><span class="cmn-message"><%= msg %></span></div><% } %>
      </h4>
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4 ">
            <hr class="my-0">
            <div class="card-body">
              <form method="POST" action="/addnewuser" enctype="multipart/form-data">
                <div class="row">
                  <div class="mb-3 col-md-10">
                    <label for="firstName" class="form-label">Name :</label>
                    <input type="text" name="name" class="form-control"  required> 
                  </div>
                  <div class="mb-3 col-md-10">
                    <input type="hidden" name="oldimage" >
                   <input type="file" name="userPhoto"  style="border:none;width:100%;">
                  </div>
                  <div class="mb-3 col-md-10">
                    <label for="lastName" class="form-label">Email :</label>
                    <input type="text" name="email"  class="form-control"   >
                   </div>
                  <div class="mb-3 col-md-10">
                    <label for="email" class="form-label">Phone :</label>
                    <input type="text" name="phone"   class="form-control" >
                  </div>
                  <div class="mb-3 col-md-10">
                    <label for="email" class="form-label">Address :</label>
                    <textarea class="form-control" name="address"></textarea>
                  </div>
                  <div class="mb-3 col-md-10">
                    <label for="email" class="form-label">Password :</label>
                    <input type="password" name="password"   class="form-control" >
                  </div>
              
                </div>
                <div class="mt-2">
                  <button type="submit" class="btn btn-primary me-2">Update</button>
                </div>
              </form>
            </div>
          
          </div>
        </div>
      </div>
    </div>
		<%- include('../../common/footer') %>
    <div class="content-backdrop fade"></div>
  </div>
</div>
<script>
  CKEDITOR.replace('editor-content');
</script>
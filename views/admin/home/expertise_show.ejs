    <%- include('../../common/sidebar_common') %>
    </div>
     <div class="col-md-7 content-wraper"> 
    <h1><% if (pagedata) { %><%= pagedata.title %>  <% } %></h1>
    <br>
    <h3><% if (pagedata) { %><%= pagedata.name %>  <% } %></h3>

<table border="2" cellspacing="5" cellpadding="5" style="width: 100%;">
<tr>
<th>Title</th>
<th>Name</th>
<th>Edit</th>
<th>Remove</th>
</tr>
<% for(var item of expertiseitem) { %>
   <tr><td> 
      <%= item.name %>
      </td>
      <td> 
      <%= item.description %>
      </td>
       <td> 
      <a href="/expertiseitemedit/<%= item._id %>" >Edit</a>

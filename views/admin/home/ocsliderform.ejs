    <div class="col-md-2  sidebar-menu">
    <%- include('../../common/sidebar') %>
    </div>
     <div class="col-md-7 content-wraper"> 
    <h1><%= title %></h1>
    <form method="POST" action="/addslideritem" enctype="multipart/form-data">

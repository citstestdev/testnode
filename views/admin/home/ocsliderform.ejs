        <br>
        <label>Author:<input type="text" name="author" required></label>
        <br>
        <label>Video Url:<input type="text" name="videourl" required></label>
        <br>
        <label>Description:<input type="text" name="description" required></label>
        <br>
        <input type="hidden" name="oldimage" >
        <input type="file" name="userPhoto" id="" placeholder=""  style="border:none;width:100%;" accept="image/*">
        <br>
        <br>
        <input type="submit" value="Submit">
    </form>
    </div>
     <div class="col-md-2">
      </div>
  </div>
</div>  
</section>

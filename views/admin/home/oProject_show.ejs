
<%- include('../../common/sidebar_common') %>
<div class="layout-page">
  <%- include('../../common/header_new') %>
  <div class="content-wrapper">
    
    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4">
      </h4>
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4" >
            <ul class="nav nav-pills flex-column flex-md-row mb-3" style="float:right">
              <li class="nav-item"><a class="nav-link form-toggle active" data-tab="#acountForm" id="account" href="javascript:void(0);">Edit Form</a></li>
              <li class="nav-item"><a class="nav-link form-toggle active" data-tab="#editForm" id="accounteditform" href="javascript:void(0);">View</a></li>
            </ul>
          <div id="acountForm">
            
            <h5 class="card-header"><?%= title %>/h5>
            <hr class="my-0">
            <div class="card-body">
              <h3><% if (pagedata) { %><%= pagedata.title %> <% } %></h3>
              <br>
              <h3><% if(pagedata) { %><%= pagedata.name %><% } %></h3>
              <br>
              <% if (pagedata) { %> <textarea id="editor-content" name="description"><%= pagedata.description %></textarea><% } %>
             
            </div>
          </div>
         
          <!-- View Form start -->
          <!-- Edit Form start -->
          <div id="editForm">
            <h5 class="card-header">Edit Form</h5>
            <hr class="my-0">
            <div class="card-body">
              <form method="POST" action="/projects" enctype="multipart/form-data">
                <div class="row">
                  <div class="mb-3 col-md-10">
                    <label for="firstName" class="form-label">Name :</label>
                    <input type="text" name="name" class="form-control" <% if (pagedata) { %>value="<%= pagedata.name %>" <% } %> required> </div>
                  <div class="mb-3 col-md-10">
                    <label for="lastName" class="form-label">Title :</label>
                    <input type="text" name="title" class="form-control" <% if (pagedata) { %>value="<%= pagedata.title %>" <% } %> required> </div>
                  <div class="mb-3 col-md-10">
                    <label for="email" class="form-label">Description :</label>
                    <textarea id="editor1" name="description" class="form-control" required> <% if (pagedata) { %> <%= pagedata.description %><% } %></textarea> </div>
                <div class="mt-2">
                  <button type="submit" class="btn btn-primary me-2">Update</button>
                </div>
              </form>
            </div>
          
          </div>
          </div>
            <!-- /Edit  end  -->
        </div>
      </div>

      <!-- Start section our project items  -->
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4" >
            <ul class="nav nav-pills flex-column flex-md-row mb-3" style="float:right">
              <li class="nav-item"><a class="nav-link form-toggle active" data-tab="#ouritemForm" id="ouritem" href="javascript:void(0);">Add Item</a></li>
              <li class="nav-item"><a class="nav-link form-toggle active" data-tab="#ouritemviewForm" id="itemeditform" href="javascript:void(0);">View</a></li>
            </ul>
          <div id="ouritemviewForm">
            
            <div class="card-body">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var item of expertiseitem) { %>
                    <tr><td> 
                       <%= item.name %>
                       </td>
                       <td> 
                       <%= item.description %>
                       </td>
                        <td> 
                       <a href="javascript:void(0)"  onclick="geteditform('<%= item._id %>')">Edit</a>
                       </td> 
                       <td> 
                       <a href="/ourprojectsitemremove/<%= item._id %>" onclick="return confirm('Are you sure you want to delete this item')">X</a>
                       </td>
                       </tr>
                 <% } %>
                 
                </tbody>
              </table>
             
            </div>
          </div>
         
          <!-- View Form start -->
          <!-- Edit Form start -->
          <div id="ouritemForm">
            <h5 class="card-header">Add Item</h5>
            <hr class="my-0">
            <div class="card-body">
              <form method="POST" action="/ourprojectsitem" enctype="multipart/form-data">
                <div class="row">
                  <div class="mb-3 col-md-10">
                    <label for="firstName" class="form-label">Name :</label>
                    <input type="text" name="name" class="form-control"  required> </div>
                  <div class="mb-3 col-md-10">
                    <label for="description" class="form-label">Description :</label>
                    <textarea id="editor1" name="description" class="form-control"  required></textarea> 
                  </div>
                  <div class="mb-3 col-md-10">
                    <input type="hidden" name="oldimage">
                    <input type="file" name="userPhoto" class="form-control"  id="" placeholder=""  style="border:none;width:100%;" accept="image/*" required> </div>
              
                </div>
                <div class="mt-2">
                  <button type="submit" class="btn btn-primary me-2">Add Item</button>
                </div>
              </form>
            </div>
          
          </div>
           

          <div id="edititemform">
            <h5 class="card-header">Edit Item</h5>
            <hr class="my-0">
            <div class="card-body">
              <form method="POST" action="/ourprojectsitem" enctype="multipart/form-data">
                <input type="text" class="form-control" name="editid" id="editid"/>
                <div class="row">
                  <div class="mb-3 col-md-10">
                    <label for="firstName" class="form-label">Name :</label>
                    <input type="text" name="name" id="name" class="form-control"  required> </div>
                  <div class="mb-3 col-md-10">
                    <label for="description"  class="form-label">Description :</label>
                    <textarea id="editor1" name="description" id="description" class="form-control"  required></textarea> 
                  </div>
                  <div class="mb-3 col-md-10">
                    <input type="hidden" name="oldimage">
                    <input type="file" name="userPhoto" class="form-control"  id="" placeholder=""  style="border:none;width:100%;" accept="image/*" required> </div>
              
                </div>
                <div class="mt-2">
                  <button type="submit" class="btn btn-primary me-2">Update</button>
                </div>
              </form>
            </div>
          
          </div>





          </div>
            <!-- /Edit  end  -->
        </div>
      </div>

 <!-- Start section our project items  -->


    </div>
    <!-- / Content -->
		<%- include('../../common/footer') %>
    <div class="content-backdrop fade"></div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  CKEDITOR.replace('editor-content');
  CKEDITOR.replace('editor-content1');
</script>
<script>
  $('#ouritemForm').hide();
  $('#ouritemviewForm').show();
  $("#ouritem").show();
  $('#edititemform').hide();
  $("#itemeditform").hide();
  $('#ouritem').click(function(){
    $('#ouritemForm').show();
    $('#ouritemviewForm').hide();
    $('#ouritem').hide();
    $('#itemeditform').show();
    $('#edititemform').hide();
  });

  $('#itemeditform').click(function(){
    $('#ouritemForm').hide();
    $('#ouritemviewForm').show();
    $('#ouritem').show();
    $('#itemeditform').hide();
    $('#edititemform').hide();
  });

function geteditform(editid){
  // alert(editid);
    $.ajax({
    url:"/getprojectitem/"+editid,
    method:"GET",
    success: function(response){
      // alert(response);
        $('#editid').val(editid);
        $('#name').val(response.name);
        $('#description').val(response.description);
        $('#ouritemForm').hide();
        $('#ouritemviewForm').hide();
        $("#ouritem").hide();
        $('#edititemform').show();
        $("#itemeditform").show();
      
      }
    });
    return false;
 }
  </script>
